<script>
const characters = {
    hutao: {
        img: "sounds/hutao-icon.jpg",
        voice: "sounds/hutao.mp3",
        music: "sounds/hutao-music.mp3"
    },
    cyrene: {
        img: "sounds/cyrene-icon.jpg",
        voice: "sounds/cyrene.mp3",
        music: "sounds/cyrene-music.mp3"
    },
    kaori: {
        img: "sounds/kaori-icon.jpg",
        voice: "sounds/kaori.mp3",
        music: "sounds/kaori-music.mp3"
    }
};

let current = "hutao";

document.getElementById("characterSelect").addEventListener("change", function() {
    current = this.value;
    document.getElementById("characterImg").src = characters[current].img;
});

function playVoice() {
    new Audio(characters[current].voice).play();
}

function playMusic() {
    new Audio(characters[current].music).play();
}
</script>

